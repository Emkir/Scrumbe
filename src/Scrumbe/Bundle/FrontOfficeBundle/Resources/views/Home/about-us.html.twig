            </div>
        </section>
        <section class="contact">
            <h1>{{ 'aboutus.form.title'|trans }}</h1>
            <p>{{ 'aboutus.form.parag'|trans }}</p>
            <form action="#" method="post">
                <input type="text" placeholder="{{ 'aboutus.form.fullname'|trans }}">
                <input type="email" placeholder="{{ 'aboutus.form.email'|trans }}">
                <textarea placeholder="{{ 'aboutus.form.message'|trans }}" rows="10"></textarea>
                <input type="submit" value="{{ 'aboutus.form.button'|trans }}">
            </form>
        </section>
    </article>
{% endblock %}