{% extends "ScrumbeFrontOfficeBundle:Home:index.html.twig" %}

{% block title %}About Us{% endblock %}

{% block nav %}
    <nav class="sticki-nav">
        <div class="wrapper-nav">
            <ul>
                <li>
                    <a href="{{ path('index') }}" class="pull-left">
                        <img src="/assets/img/logo.svg">
                    </a>
                    <a href="#">{{ 'nav.items.1'|trans }}</a>
                    <a href="{{ path('scrum') }}">{{ 'nav.items.2'|trans }}</a>
                    <a href="{{ path('about') }}">{{ 'nav.items.3'|trans }}</a>
                    <a href="#">{{ 'nav.items.4'|trans }}</a>
                    <span class="sign-in-btn">{{ 'nav.items.5'|trans }}</span>
                    <span class="button-green sign-up-btn">{{ 'nav.items.6'|trans }}</span>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <header class="header-about">
        <div class="wrapper-header-fix">
            <div class="contain-title-fix">
                <h1><span class="openBold">{{ 'aboutus.header.title.word1'|trans }}</span> {{ 'aboutus.header.title.lastword'|trans }}</h1>
                <p>{{ 'aboutus.header.parag'|trans }}</p>
            </div>
        </div>
    </header>

    <article class="article-about">
        <section class="odd-section">
            <div class="wrapper-section">
                <div class="contain-info">
                    <h2><span class="openBold">{{ 'aboutus.item1.firstname'|trans }}</span> {{ 'aboutus.item1.lastname'|trans }}</h2>
                    <h3>{{ 'aboutus.item1.job'|trans }}</h3>
                    <div class="divider"></div>
                    <p>{{ 'aboutus.item1.parag'|trans }}</p>
                </div>
                <img src="/assets/img/Thomas-Sanson.png">
            </div>
        </section>
        <section class="section">
            <div class="wrapper-section">
                <div class="contain-info">
                    <h2><span class="openBold">{{ 'aboutus.item2.firstname'|trans }}</span> {{ 'aboutus.item2.lastname'|trans }}</h2>
