                    <div class="divider"></div>
                    <p>{{ 'aboutus.item3.parag'|trans }}</p>
                </div>
                <img src="/assets/img/Anthony-Ribeiro.png">
            </div>
        </section>
        <section class="section">
            <div class="wrapper-section">
                <div class="contain-info">
                    <h2><span class="openBold">{{ 'aboutus.item4.firstname'|trans }}</span> {{ 'aboutus.item4.lastname'|trans }}</h2>
                    <h3>{{ 'aboutus.item4.job'|trans }}</h3>
                    <div class="divider"></div>
